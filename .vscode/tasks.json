{
  "version": "2.0.0",
  "tasks": [
    {
      "command": "npm run dev",
      "detail": "Start development for Next.js",
      "group": "build",
      "label": "Start",
      "type": "shell",
      "options": {
        "cwd": "next-js/"
      },
      "dependsOn": ["Install"],
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "command": "npm install",
      "detail": "Install dependencies",
      "group": "build",
      "label": "Install",
      "type": "shell",
      "options": {
        "cwd": "next-js/"
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "command": "resume export --theme ./jsonresume-theme-andrewwestling ../next-js/app/resume/components/resume.html && resume export --theme ./jsonresume-theme-andrewwestling ../next-js/public/assets/'Andrew Westling Resume'.pdf",
      "detail": "Generate HTML resume and put it in public folder",
      "label": "Resume: Regenerate HTML and PDF",
      "type": "shell",
      "options": {
        "cwd": "resume/"
      },
      "group": "none",
      "dependsOn": ["Resume: Regenerate CSS"],
      "problemMatcher": []
    },
    {
      "label": "Resume: Regenerate CSS",
      "detail": "Generate resume CSS from SCSS files",
      "type": "npm",
      "script": "gulp:css",
      "options": {
        "cwd": "resume/jsonresume-theme-andrewwestling"
      },
      "group": "none",
      "problemMatcher": []
    },
    {
      "command": "npm run dev",
      "detail": "Start development for anti-performances",
      "group": "build",
      "label": "anti-performances: Start",
      "type": "shell",
      "options": {
        "cwd": "anti-performances/"
      },
      "dependsOn": ["anti-performances: Install"],
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "command": "npm install",
      "detail": "Install dependencies for anti-performances",
      "group": "build",
      "label": "anti-performances: Install",
      "type": "shell",
      "options": {
        "cwd": "anti-performances/"
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "anti-performances: Generate Database",
      "detail": "Generate the database for anti-performances content from Obsidian vault",
      "type": "shell",
      "command": "npm run generate-db ${input:vaultPath}",
      "options": {
        "cwd": "${workspaceFolder}/anti-performances"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "vaultPath",
      "type": "promptString",
      "description": "Path to the Obsidian vault",
      "default": "/Users/amw/o-vault-antiperformances"
    }
  ]
}
